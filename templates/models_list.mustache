{{!
    @template tool_inspire/models_list

    Template for inspire models list.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
    }
}}
<div class="box">

<table class="generaltable fullwidth">
    <caption>{{#str}}modelslist, tool_inspire{{/str}}</caption>
    <thead>
        <tr>
            <th scope="col">{{#str}}target, tool_inspire{{/str}}</th>
            <th scope="col">{{#str}}enabled, tool_inspire{{/str}}</th>
            <th scope="col">{{#str}}trained, tool_inspire{{/str}}</th>
            <th scope="col">{{#str}}indicators, tool_inspire{{/str}}</th>
            <th scope="col">{{#str}}modeltimesplitting, tool_inspire{{/str}}</th>
            <th scope="col">{{#str}}evaluationminscore, tool_inspire{{/str}}</th>
            <th scope="col">{{#str}}timemodified, tool_inspire{{/str}}</th>
            <th scope="col">{{#str}}viewpredictions, tool_inspire{{/str}}</th>
        </tr>
    </thead>
    <tbody>
    {{#models}}
        <tr>
            <td>{{target}}</td>
            <td>
                {{#enabled}}{{#str}}yes{{/str}}{{/enabled}}{{^enabled}}{{#str}}no{{/str}}{{/enabled}}
            </td>
            <td>
                {{#trained}}{{#str}}yes{{/str}}{{/trained}}{{^trained}}{{#str}}no{{/str}}{{/trained}}
            </td>
            <td>
                <ul>
                {{#indicators}}
                    <li>{{.}}</li>
                {{/indicators}}
                </ul>
            </td>
            <td>
                {{#timesplitting}}{{timesplitting}}{{/timesplitting}}{{^timesplitting}}{{#str}}notdefined, tool_inspire{{/str}}{{/timesplitting}}
            </td>
            <td>
                {{#evaluationminscore}} {{evaluationminscore}} {{/evaluationminscore}}
            </td>
            <td>{{timemodified}}</td>
            <td>
                {{#predictions}}
                    {{> core/single_select }}
                {{/predictions}}
                {{^predictions}}
                    {{#str}}nopredictionsyet, tool_inspire{{/str}}
                {{/predictions}}
            </td>
        </tr>
    {{/models}}
    </tbody>
    </table>
</div>
