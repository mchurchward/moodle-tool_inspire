    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
    }
}}
<div class="container m-t-3 card">
    <div class="row card-block">
        {{#sampleimage}}
            <div class="col-sm-1">
                {{{sampleimage}}}
            </div>
            <div class="col-sm-3">
                {{{sampledescription}}}
            </div>
        {{/sampleimage}}
        {{^sampleimage}}
            <div class="col-sm-4">
                {{{sampledescription}}}
            </div>
        {{/sampleimage}}
        <div class="col-sm-4">
            <div class="{{predictionstyle}}">{{predictiondisplayvalue}}</div>
        </div>
        <div class="col-sm-4">
            {{#actions}}
                    {{> core/action_link}}
            {{/actions}}
        </div>
    </div>
</div>
